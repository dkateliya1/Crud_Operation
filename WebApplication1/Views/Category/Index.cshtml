@model IEnumerable<WebApplication1.Models.Category>
@using X.PagedList.Mvc.Core;
@using X.PagedList;

@{
    ViewData["Title"] = "Category List";
}
<h3>@ViewData["Title"]</h3>
<hr />
<p>
    <a class="btn btn-sm btn-primary m-2" asp-action="Create" asp-controller="Category">Create New Category</a>
</p>
<table class="table table-bordered table-responsive table-hover">
    <thead>
        <tr>
            <th>CategoryId</th>
            <th>CategoryName</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Id</td>
                    <td>@category.Name</td>
                    <td>
                        <a class="btn btn-sm btn-warning" asp-action="Update" asp-controller="Category" asp-route-id="@category.Id">Update</a>
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-controller="Category" asp-route-id="@category.Id">Delete</a>
                    </td>
                </tr>

            }

        }
        else
        {
            <tr>
                <td colspan="5">
                    <div>Categories Not Available In Database</div>
                </td>
            </tr>

        }
    </tbody>
</table>

@Html.PagedListPager((IPagedList)Model,i => Url.Action("Index",new{i=i}))
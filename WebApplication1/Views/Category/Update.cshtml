@model WebApplication1.Models.Category

<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-header">
                    <h1 class="text-center text-primary">Update Category</h1>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="Update">
                        <div class="form-group">
                            <label asp-for="Name"></label>
                            <input type="hidden" asp-for="Id" />
                            <input type="text" asp-for="Name" class="form-control m-2" placeholder="Enter Category Name" />
                        </div>
                        <div class="form-group">
                            <input type="submit" value="submit" class="btn btn-sm btn-outline-success m-2 float-right" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>